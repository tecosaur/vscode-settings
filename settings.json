{
    "editor.fontLigatures": true,
    "window.zoomLevel": 1,
    "editor.fontSize": 16,
    "editor.fontFamily": "Fira Code",
    "workbench.colorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    "window.titleBarStyle": "custom",
    "workbench.statusBar.feedback.visible": false,

    // ————————————————————————————
    // Editor Feel
    // ————————————————————————————
    "breadcrumbs.enabled": true,
    "window.enableMenuBarMnemonics": false,
    // cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    // suggestions / snippets
    "editor.snippetSuggestions": "top",
    "editor.wordBasedSuggestions": true,
    "editor.tabCompletion": "onlySnippets",
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.quickSuggestionsDelay": 0,
    // other
    "editor.formatOnSave": true,
    "editor.emptySelectionClipboard": false,
    "editor.wordSeparators": "`-~!@#$%^&*()=+[\\{]\\}\\|;:'\",.<>/?",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "files.exclude": {
        "**/._*": true,
        // Latex files
        "**/*.synctex.gz": true,
        "**/*.fls": true,
        "**/*.fdb_latexmk": true,
        "**/*.aux": true,
        "**/*.ptc": true,
        // Latex Glossary Files
        "**/*.glg": true,
        "**/*.glo": true,
        "**/*.gls": true,
        "**/*.glsdefs": true,
        "**/*.ist": true,
        // Other filles
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.associations": {
        "*.latex": "latex"
    },
    "files.insertFinalNewline": true,
    // ————————————————————————————
    // File-type specific
    // ————————————————————————————
    "[latex]": {
        "editor.wordWrap": "on",
        "editor.fontFamily": "IBM Plex Sans", // or: Verdana, Comic Sans MS
        "editor.fontSize": 18,
        "editor.letterSpacing": 0.15
    },
    "bracket-pair-colorizer-2.excludedLanguages": ["latex"],
    "[markdown]": {
        "editor.wordWrap": "on"
        // "editor.fontFamily": "IBM Plex Sans", // or: Verdana, Comic Sans MS
        // "editor.fontSize": 18,
        // "editor.letterSpacing": 0.15
    },
    "[javascript]": {
        "editor.suggestSelection": "first",
        "editor.rulers": [140]
    },
    "[typescript]": {
        "editor.suggestSelection": "first",
        "editor.rulers": [140]
    },
    "[css]": {
        "editor.rulers": [140]
    },
    "[python]": {
        "editor.suggestSelection": "first",
        "editor.rulers": [88]
    },
    // JSON level colour coding
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "JSON Key - Level 0",
                "scope": ["source.json meta.structure.dictionary.json support.type.property-name.json"],
                "settings": {
                    "foreground": "#F6FCFA"
                }
            },
            {
                "name": "JSON Key - Level 1",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#78DCE8"
                }
            },
            {
                "name": "JSON Key - Level 2",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#A9DC76"
                }
            },
            {
                "name": "JSON Key - Level 3",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#FC9867"
                }
            },
            {
                "name": "JSON Key - Level 4",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#78DCE8"
                }
            },
            {
                "name": "JSON Key - Level 5",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#A9DC76"
                }
            },
            {
                "name": "JSON Key - Level 6",
                "scope": [
                    "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
                ],
                "settings": {
                    "foreground": "#FC9867"
                }
            }
        ]
    },
    // ————————————————————————————
    // Terminal
    // ————————————————————————————
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.cursorBlinking": true,
    // ————————————————————————————
    // Extension specific settings
    // ————————————————————————————
    "dictCompletion.leastNumOfChars": 2,
    //   "spellright.recheckOnSave": false,
    "latex-workshop.view.pdf.viewer": "tab",
    // "html-css-class-completion.enableEmmetSupport": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.showSuggestionsAsSnippets": true,
    "python.autoComplete.addBrackets": true,
    "python.terminal.executeInFileDir": true,
    "python.jediEnabled": false,
    "tslint.jsEnable": true,
    // "maven.terminal.useJavaHome": true,
    "files.trimTrailingWhitespace": true,
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "org.todoKeywords": ["TODO", "DONE", "PRGS", "WAIT", "SCHD"],
    "todo.colors.types": {
        "TODO": "#ffcc00",
        "FIXME": "#cc0000",
        "FIX": "#cc0000",
        "BUG": "#cc0000",
        "UGLY": "#cc0000",
        "DEBUG": "#cc0000",
        "HACK": "#cc0000",
        "REVIEW": "#00ccff",
        "OPTIMIZE": "#00ccff",
        "TSC": "#00ccff",
        "NOTE": "#cc00cc",
        "IDEA": "#cc00cc",
        "ADD": "#8C8",
        "MISSING": "#689cff"
    },
    "todo.embedded.regex": "(?:<!— *)?(?:#|//|/\\*+|<!—|—|%) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE|MISSING|ADD)(?:\\([^(]+\\))?:?(?!\\w)(?: *—>| *\\*/|(?= *(?:[^:]//|/\\*+|<!—|@|—))|((?: +[^\n@]*?)(?= *(?:[^:]//|/\\*+|<!—|@|—))|(?: +[^@\n]+)?))",
    "todo.embedded.providers.rg.regex": "(?:#|//|/\\*+|<!—|—|%) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE|MISSING|ADD)",
    "todo.embedded.providers.ag.regex": "(?:#|//|/\\*+|<!—|—|%) *(TODO|FIXME|FIX|BUG|UGLY|HACK|NOTE|IDEA|REVIEW|DEBUG|OPTIMIZE|MISSING|ADD)",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.chktex.run": "onType",
    "latex-workshop.chktex.args.active": ["-wall", "-n22", "-n30", "-e16", "-q", "-n1", "-n24"],
    "latex-workshop.chktex.args.root": ["-wall", "-n22", "-n30", "-e16", "-q", "-n1", "-n24"],
    "latex-workshop.hover.preview.cursor.symbol": "\\!|\\!",
    "latex-workshop.hover.preview.cursor.color": "gray",
    "latex-workshop.hover.preview.cursor.enabled": true,
    "latex-workshop.view.pdf.invert": 0.0,
    "latex-workshop.progress.runIconType": "Solid Circled",
    "latex-workshop.latex.texDirs": ["~/texmf/tex/latex/bmc"],
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["-synctex=1", "-interaction=nonstopmode", "-shell-escape", "-file-line-error", "-pdf", "%DOC%"]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": ["-synctex=1", "-interaction=nonstopmode", "-shell-escape", "-file-line-error", "%DOC%"]
        },
        {
            "name": "precompile preamble",
            "command": "pdftex",
            "args": [
                "-ini",
                "-interaction=nonstopmode",
                "-shell-escape",
                "-file-line-error",
                "-jobname=\"preamble\"",
                "\"&pdflatex\"",
                "mylatexformat.ltx",
                "\"%DOC%.tex\""
            ]
        },
        {
            "name": "reference precompiled preamble",
            "command": "sed",
            "args": ["-i", "1s/^/%\\&preamble\\n/", "%DOC%.tex"]
        },
        {
            "name": "remove any reference precompiled preamble",
            "command": "sed",
            "args": ["-i", ":begin;$!N;s/%\\&preamble\\n//;tbegin;P;D", "%DOC%.tex"]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "sage",
            "command": "sage",
            "args": ["%DOC%.sagetex.sage"]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk 🔃",
            "tools": ["latexmk"]
        },
        {
            "name": "pdflatex",
            "tools": ["pdflatex"]
        },
        {
            "name": "$(link) precompile preamble",
            "tools": ["precompile preamble", "remove any reference precompiled preamble", "reference precompiled preamble"]
        },
        {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": ["pdflatex", "bibtex", "pdflatex", "pdflatex"]
        },
        {
            "name": "pdflatex ➞ ⬡ sage ➞ pdflatex",
            "tools": ["pdflatex", "sage", "pdflatex"]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.glsdefs"
    ],
    "highlight.regexes": {
        "((?:<!— *)?(?:#|//|/\\*+|<!—|%) *TODO:?)(?!\\w)((?: +[^\n@]+?)(?= *(?:[^:]//|/\\*+|<!—|@))|(?: +[^@\n]+)?)": [
            {
                "overviewRulerColor": "#ffcc00",
                "backgroundColor": "#ffcc00",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#d9ad00",
                "color": "#1f1f1f"
            }
        ],
        "((?:<!— *)?(?:#|//|/\\*+|<!—|%) *FIXME:?)(?!\\w)((?: +[^\n@]+?)(?= *(?:[^:]//|/\\*+|<!—|@))|(?: +[^@\n]+)?)": [
            {
                "overviewRulerColor": "#f33",
                "backgroundColor": "#f33",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#b23535",
                "color": "#1f1f1f"
            }
        ],
        "((?:<!— *)?(?:#|//|/\\*+|<!—|%) *NOTE:?)(?!\\w)((?: +[^\n@]+?)(?= *(?:[^:]//|/\\*+|<!—|@))|(?: +[^@\n]+)?)": [
            {
                "overviewRulerColor": "#888",
                "backgroundColor": "#888",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#444",
                "color": "#ddd"
            }
        ],
        "((?:<!— *)?(?:#|//|/\\*+|<!—|%) *MISSING:?)(?!\\w)((?: +[^\n@]+?)(?= *(?:[^:]//|/\\*+|<!—|@))|(?: +[^@\n]+)?)": [
            {
                "overviewRulerColor": "#88C",
                "backgroundColor": "#88C",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#447",
                "color": "#ddd"
            }
        ],
        "((?:<!— *)?(?:#|//|/\\*+|<!—|%) *ADD\\s?:)(?!\\w)((?: +[^\n@]+?)(?= *(?:[^:]//|/\\*+|<!—|@))|(?: +[^@\n]+)?)": [
            {
                "overviewRulerColor": "#8C8",
                "backgroundColor": "#8C8",
                "color": "#1f1f1f",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#474",
                "color": "#ddd"
            }
        ],
        "(// )(@\\w+)": [
            {},
            {
                "color": "#4de0ff"
            }
        ],
        // \todo[opt[[[[]]]]]{val}
        "(\\\\todo\\[?[^\\]\\{\\}]*\\]?)(\\{.*\\})": [
            {
                "overviewRulerColor": "#2D3A3E",
                "backgroundColor": "#2D3A3E",
                "color": "#F6FCFA",
                "fontWeight": "bold"
            },
            {
                "backgroundColor": "#2D7A7E",
                "color": "#ddd"
            }
        ]
    },
    "prettier.printWidth": 140,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "prettier.tslintIntegration": true,

    "cSpell.language": "en-GB",
    "cSpell.ignoreRegExpList": [
        "\\\\cite{[A-Za-z0-9, -]+}",
        "\\\\begin{\\w+}",
        "\\\\end{\\w+}",
        "\\\\usepackage{\\w+}",
        "\\\\bibliographystyle{\\w+}",
        "\\\\hyphenation{[A-Za-z0-9, -]+}",
        "\\\\\\w+{?"
    ],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "SCOWL [Size=60], AU + UK(-ise)",
            "path": "~/.config/Code - OSS/User/Custom cSpell Dictionaries/SCOWL-workdlist-au-uk-60.txt"
        },
        {
            "name": "Scientific UK",
            "path": "~/.config/Code - OSS/User/Custom cSpell Dictionaries/Scientific_UK.txt"
        }
    ],

    "cSpell.dictionaries": ["SCOWL [Size=60], AU + UK(-ise)", "Scientific UK"],

    // "cSpell.languageSettings": [
    //     {
    //         "languageId": "latex",
    //         "dictionaries": ["SCOWL [Size=60], AU + UK(-ise)", "Scientific UK"]
    //     }
    // ],

    "write-good.languages": ["markdown", "plaintext", "latex"],
    "write-good.write-good-config": { "passive": false },

    "JSONResume.theme": "compact",
    "python.formatting.provider": "black",
    "git.enableSmartCommit": true,
    "cSpell.userWords": ["chktex"],
    "errorLens.warningColor": "rgba(253,215,108,0.1)",
    "errorLens.warningTextColor": "rgba(240,240,240,0.5)",
    "errorLens.infoColor": "rgba(120,220,232,0.1)",
    "errorLens.infoTextColor": "rgba(240,240,240,0.5)",
    "errorLens.errorColor": "rgba(255,65,86,0.4)",
    "errorLens.errorTextColor": "rgba(240,240,240,0.8)",

    "code-runner.executorMapByFileExtension": {
        ".vb": "cd $dir && vbc /nologo $fileName && $dir$fileNameWithoutExt",
        ".vbs": "cscript //Nologo",
        ".scala": "scala",
        ".jl": "julia",
        ".cr": "crystal",
        ".ml": "ocaml",
        ".exs": "elixir",
        ".hx": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
        ".rkt": "racket",
        ".ahk": "autohotkey",
        ".dot": "cd $dir && dot -Tpdf -o $fileNameWithoutExt.pdf $fileName -Gfontname=\"IBM Plex Serif\" -Nfontname=\"IBM Plex Serif\" -Efontname=\"IBM Plex Serif\"",
        ".au3": "autoit3",
        ".kt": "cd $dir && kotlinc $fileName -include-runtime -d $fileNameWithoutExt.jar && java -jar $fileNameWithoutExt.jar",
        ".kts": "kotlinc -script",
        ".dart": "dart",
        ".pas": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
        ".pp": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
        ".d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
        ".hs": "runhaskell",
        ".nim": "nim compile --verbosity:0 --hints:off --run",
        ".csproj": "dotnet run --project",
        ".fsproj": "dotnet run --project",
        ".lisp": "sbcl --script"
    }
}
